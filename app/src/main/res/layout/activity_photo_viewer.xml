<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_photo_viewer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:orientation="vertical"
    tools:context="com.example.demoset.ui.PhotoViewerActivity">

    <TextView
        android:id="@+id/activity_photo_viewer_save_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_item_height"
        android:background="@drawable/shape_corner_solid_teal"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/white" />

    <com.example.demoset.view.ZoomImageView
        android:id="@+id/activity_photo_viewer_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
