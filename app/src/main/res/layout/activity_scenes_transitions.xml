<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.demoset.ui.action.ScenesTransitionsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/activity_scenes_transitions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/activity_scenes_transitions_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DO MAGIC" />

            <TextView
                android:id="@+id/activity_scenes_transitions_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Transitions are awesome!"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/activity_scenes_transitions_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_tree" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <Button
                    android:id="@+id/activity_scenes_transitions_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_red_300"
                    android:text="Path" />
            </FrameLayout>

            <Button
                android:id="@+id/activity_scenes_transitions_TransitionName_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TransitionName" />

            <LinearLayout
                android:id="@+id/activity_scenes_transitions_TransitionName_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

            <Button
                android:id="@+id/activity_scenes_transitions_Scale_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DO MAGIC" />

            <TextView
                android:id="@+id/activity_scenes_transitions_Scale_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Transitions are awesome!" />

            <ImageView
                android:id="@+id/activity_scenes_transitions_Rotate_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/add"/>

            <TextView
                android:id="@+id/activity_scenes_transitions_ChangeText_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Transitions are awesome!" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
