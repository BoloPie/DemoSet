<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="35dp">


        <EditText
            android:id="@+id/activity_register_tel_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_height"
            android:background="@drawable/shape_corner_solid_edit"
            android:ellipsize="end"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textColor="@color/text_black_54"
            android:textColorHint="@color/text_black_26" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/activity_register_msg_et"
                android:layout_width="0dp"
                android:layout_height="@dimen/menu_item_height"
                android:layout_weight="1"
                android:background="@drawable/shape_corner_solid_edit"
                android:ellipsize="end"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textColor="@color/text_black_54"
                android:textColorHint="@color/text_black_26" />

            <Button
                android:id="@+id/activity_register_send_msg_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_corner_solid_teal"
                android:text="获取验证码"
                android:textColor="@color/text_white_70" />
        </LinearLayout>


        <EditText
            android:id="@+id/activity_register_password_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_height"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_corner_solid_edit"
            android:ellipsize="end"
            android:hint="请设置登录密码(最少6位)"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textColor="@color/text_black_54"
            android:textColorHint="@color/text_black_26" />


        <Button
            android:id="@+id/activity_register_sign_up_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_height"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_corner_solid_red_400"
            android:text="SIGN UP"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtUserProtocol"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="@dimen/horizontal_margin"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/text_black_54"
        tools:text="注册即表示您已同意用户服务协议" />

</LinearLayout>