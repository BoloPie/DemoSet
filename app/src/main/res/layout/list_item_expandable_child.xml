<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_large_height">

    <ImageView
        android:id="@+id/list_item_expandable_child_head_iv"
        android:layout_width="@dimen/avatar_height"
        android:layout_height="@dimen/avatar_height"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:layout_marginTop="12dp"
        android:padding="1px"
        android:background="@drawable/shape_gray_avatar_bg"
        android:src="@mipmap/ic_head_default" />

    <TextView
        android:id="@+id/list_item_expandable_child_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/list_item_expandable_child_head_iv"
        android:layout_marginLeft="@dimen/content_margin"
        android:text="child"
        android:textColor="@color/text_black_54"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:id="@+id/list_item_expandable_child_tel_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/list_item_expandable_child_head_iv"
        android:layout_below="@+id/list_item_expandable_child_name_tv"
        android:layout_marginLeft="@dimen/content_margin"
        android:text="188 6666 8888"
        android:textColor="@color/text_black_26"
        android:textSize="@dimen/text_size_13" />
    <!-- 错误的设计 -->


    <TextView
        android:id="@+id/list_item_expandable_child_no_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/icon_height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/space_height"
        android:layout_marginTop="28dp"
        android:background="@drawable/shape_corner_solid_red"
        android:gravity="center"
        android:paddingLeft="@dimen/horizontal_margin"
        android:paddingRight="@dimen/horizontal_margin"
        android:text="拒绝"
        android:textColor="@color/text_white_100"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/list_item_expandable_child_ok_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/icon_height"
        android:layout_marginRight="@dimen/space_height"
        android:layout_marginTop="28dp"
        android:layout_toLeftOf="@id/list_item_expandable_child_no_tv"
        android:background="@drawable/shape_corner_solid_blue"
        android:gravity="center"
        android:paddingLeft="@dimen/horizontal_margin"
        android:paddingRight="@dimen/horizontal_margin"
        android:text="同意"
        android:textColor="@color/text_white_100"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/list_item_expandable_child_reback_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/icon_height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/space_height"
        android:layout_marginTop="28dp"
        android:background="@drawable/shape_corner_solid_gray"
        android:gravity="center"
        android:paddingLeft="@dimen/horizontal_margin"
        android:paddingRight="@dimen/horizontal_margin"
        android:text="撤销"
        android:textColor="@color/text_white_100"
        android:textSize="@dimen/text_size_13" />

</RelativeLayout>
